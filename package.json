{
  "name": "jira-sidekick",
  "displayName": "Jira Sidekick",
  "description": "A VS Code extension for Jira integration",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/thwoodle/jira-sidekick"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jira-sidekick",
          "title": "Jira Sidekick",
          "icon": "$(issues)"
        }
      ]
    },
    "views": {
      "jira-sidekick": [
        {
          "id": "jira-sidekick.issues",
          "name": "My Issues"
        }
      ]
    },
    "commands": [
      {
        "command": "jira-sidekick.refresh",
        "title": "Refresh Issues",
        "category": "Jira Sidekick",
        "icon": "$(refresh)"
      },
      {
        "command": "jira-sidekick.configure",
        "title": "Configure Credentials",
        "category": "Jira Sidekick",
        "icon": "$(gear)"
      },
      {
        "command": "jira-sidekick.openInBrowser",
        "title": "Open in Browser",
        "category": "Jira Sidekick",
        "icon": "$(link-external)"
      },
      {
        "command": "jira-sidekick.openIssue",
        "title": "Open Issue Details",
        "category": "Jira Sidekick",
        "icon": "$(go-to-file)"
      },
      {
        "command": "jira-sidekick.transitionIssue",
        "title": "Transition Issue",
        "category": "Jira Sidekick",
        "icon": "$(arrow-swap)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jira-sidekick.refresh",
          "when": "view == jira-sidekick.issues",
          "group": "navigation"
        },
        {
          "command": "jira-sidekick.configure",
          "when": "view == jira-sidekick.issues",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jira-sidekick.openIssue",
          "when": "view == jira-sidekick.issues && viewItem == issue",
          "group": "navigation@1"
        },
        {
          "command": "jira-sidekick.openInBrowser",
          "when": "view == jira-sidekick.issues && viewItem == issue",
          "group": "navigation@2"
        },
        {
          "command": "jira-sidekick.transitionIssue",
          "when": "view == jira-sidekick.issues && viewItem == issue",
          "group": "actions@1"
        }
      ],
      "commandPalette": [
        {
          "command": "jira-sidekick.transitionIssue",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Jira Sidekick",
      "properties": {
        "jira-sidekick.jql": {
          "type": "string",
          "default": "assignee = currentUser() ORDER BY updated DESC",
          "description": "JQL query to fetch issues"
        },
        "jira-sidekick.maxTabTitleLength": {
          "type": "number",
          "default": 30,
          "scope": "window",
          "description": "Maximum number of characters to display for issue summaries in editor tab titles. Set to 0 to disable truncation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build:webview",
    "build:webview": "node esbuild.webview.mjs",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ts": "tsc -watch -p ./",
    "watch:webview": "node esbuild.webview.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --max-warnings 0",
    "test": "vscode-test",
    "test:coverage": "vscode-test --coverage --coverage-output coverage/extension --coverage-reporter lcov --coverage-reporter text",
    "test:webview": "web-test-runner",
    "test:webview:coverage": "web-test-runner --coverage",
    "test:all": "npm run test && npm run test:webview",
    "test:all:coverage": "npm run test:coverage && npm run test:webview:coverage && npm run coverage:merge && npm run coverage:summary",
    "coverage:merge": "lcov-result-merger 'coverage/*/lcov.info' 'coverage/lcov-combined.info'",
    "coverage:summary": "awk -F: '/^DA:/{split($2,a,\",\"); total++; if(a[2]>0) covered++} END{printf \"Combined Coverage: %.1f%% (%d/%d lines)\\n\", (covered/total)*100, covered, total}' coverage/lcov-combined.info"
  },
  "dependencies": {
    "marked": "^15.0.6"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode-elements/elements": "^2.4.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "highlight.js": "^11.11.1",
    "lcov-result-merger": "^5.0.1",
    "lit": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
