{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts"
  ]
}


